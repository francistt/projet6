{%  set url = path('ads_show', {'slug': ad.slug}) %}

    <div class="col-md-4">
        <div class"card bg-light mb-3">
            <div class="card-header text-center">
                <strong>{{ ad.name }}</strong>, <strong>{{ ad.age }} ans</strong> <br>
                <small>Pas encore not√©</small>
            </div>

            <a href="{{ url }}">
                <img src="{{ ad.coverImage }}" alt="Image de l'animal" style="height: 200px; width: 100%; display: block">
            </a>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="{{ url }}">
                        {{ ad.type }}
                    </a>
                </h4>
                <p class="card-text">
                    {{ ad.introduction }}
                </p>
                <a href="{{ url }}" class="btn btn-secondary">En savoir plus</a>
            </div>
        </div>
    </div>